{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "mocha": true,
    "browser": true
  },
  "globals": {
    "window": true,
    "chai": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    "react/prefer-stateless-function": 1,
    "react/jsx-no-bind": 0,
    "arrow-body-style": 1,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "prefer-rest-params": 0,
    "max-len": 0,
    "no-continue": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "no-plusplus": 1,
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
